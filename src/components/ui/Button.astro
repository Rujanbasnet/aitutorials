---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { href, variant = 'primary', size = 'md', class: className = '' } = Astro.props;
const Tag = href ? 'a' : 'button';

const variants: Record<string, string> = {
  primary: 'bg-[var(--color-text-primary)] text-white hover:bg-[var(--color-text-secondary)] transition-colors',
  secondary: 'border border-[var(--color-border-strong)] text-[var(--color-text-primary)] hover:border-[var(--color-text-muted)] hover:bg-[var(--color-bg-warm)] transition-all',
  ghost: 'text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] hover:bg-[var(--color-bg-warm)] transition-all',
};

const sizes: Record<string, string> = {
  sm: 'px-3.5 py-1.5 text-sm',
  md: 'px-5 py-2.5 text-sm',
  lg: 'px-6 py-3 text-base',
};
---

<Tag
  href={href}
  class:list={['inline-flex items-center justify-center gap-2 rounded-full font-medium', variants[variant], sizes[size], className]}
>
  <slot />
</Tag>
